<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.HomeActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pay_bills_fragment"
        android:layout_width="match_parent"
        android:layout_height="563dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/transfer_money_fragment"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="395dp"
        android:layout_height="576dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_logged_in_name"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Logged in AS"
                android:textAlignment="center"
                android:textSize="24sp" />

            <GridView
                android:id="@+id/home_grid_layout"
                android:layout_width="377dp"
                android:layout_height="328dp"
                app:layout_constraintBottom_toTopOf="@+id/sv_main"
                app:layout_constraintEnd_toStartOf="@+id/sv_main"
                app:layout_constraintStart_toEndOf="@+id/sv_main"
                app:layout_constraintTop_toBottomOf="@+id/sv_main"
                app:layout_constraintVertical_bias="0.729" />

            <Button
                android:id="@+id/button_transactions"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="TRANSFER MONEY"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_bills"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:text="PAY BILLS"
                android:textSize="30sp" />

        </LinearLayout>
    </ScrollView>

    <TableRow
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pay_bills_fragment">

        <Button
            android:id="@+id/button_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="HOME" />

        <Button
            android:id="@+id/button_profile"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_weight="1"
            android:text="Profile" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button_logout"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_weight="1"
            android:text="LOGOUT" />

    </TableRow>

</android.support.constraint.ConstraintLayout>